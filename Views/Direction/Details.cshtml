@model StockApp.Models.TB_direction

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Details de la direction <strong>@Model.Nom_direction</strong></h2>

<div>
    @*<h4>Direction</h4>*@
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Nom Direction
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom_direction)
        </dd>

        <dt>
            Description
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Date Creer
           
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreer)
        </dd>

        <dt>
            Creer par
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreerPar)
        </dd>

    </dl>
</div>

   <p>
    <a href="@Url.Action("Edit", new { id = Model.Id_direction })" class="btn btn-primary btn-sm">
        <span class="glyphicon glyphicon-edit"></span> Modifier
    </a>
    <a href="@Url.Action("Index")" class="btn btn-info btn-sm">
        <span class="glyphicon glyphicon-arrow-left"></span> Retourner a la liste
    </a>
</p>

